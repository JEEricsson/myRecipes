<%= render 'shared/title_pages', title: "Chef: " + @chef.chefname %>

<hr/>
<div>
     <div>
      <p class="center">
         <%= gravatar_for @chef, size: 230 %>
      </p>
    </div>
   </div>
<hr/>
 <h3 class="center">My Recipes</h3>
 <%= will_paginate @recipes, class: "center pagination-lg" %>
  <% @recipes.each do |recipe| %> 
 <div class="row">
     <div class="col-md-8 col-md-offset-2 well">
       <p class="image_profile pull-left">
            <%= image_tag(recipe.picture.url, size: "200x80", class: "gravatar") if recipe.picture %>
        </p>
   <div class="pull-top">      
   <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
        <p><%= recipe.summary %></p>
        <p>
        <span class='quiet'><small>Created:&nbsp<%= time_ago_in_words(recipe.created_at) %></small></span><br>
         <span class='quiet'><small>Updated:&nbsp<%= time_ago_in_words(recipe.updated_at) %></small></span>
        </p>
        
        <div class="center">
           <%= link_to like_recipe_path(recipe, like: true), method: :post do %>
           <i class="glyphicon glyphicon-thumbs-up"></i>&nbsp <%= recipe.thumps_up_total %>
           <% end %> &nbsp&nbsp&nbsp
           <%= link_to like_recipe_path(recipe, like: false), method: :post do %>
           <i class="glyphicon glyphicon-thumbs-down"></i>&nbsp <%= recipe.thumps_down_total %>
           <% end %>
           </div>  
         </div>
    </div>
</div>
 <% end %>  
</div>

