<p>
    <h1 class="center">Create a new recipe</h1>
    <hr/>
</p>

 <% if @recipe.errors.any? %>

 <div class="row">
    
    <div class="alert alert-danger col-md-6 col-md-offset-3 center">
        <h5>Please fill the form correctly</h5>
        
        <ul>
            <% @recipe.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
     </div>
   </div>
  <% end %>

<div class="row">
    
    <div class="col-md-6 col-md-offset-3 center well">
        <%= form_for @recipe do |f| %>
        <%= f.label :name %>
        <br>
        <%= f.text_field :name %>
        <br>
        
        <%= f.label :summary %>
        <br>
        <%= f.text_field :summary %>
        <br>
        <%= f.label :description %>
        <br>
        <%= f.text_area :description, rows: 9 %>
        <br>
        <%= f.submit 'Create Recipe', class: "btn btn-success" %>
        
    </div>
</div>
<% end %>